<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFF"
    tools:context="com.example.e_ft.info3">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengumuman Penambahan Jadwal KRS Online Semester Genap T.A 2019/2020"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txtPosted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtJudul"
            android:layout_alignLeft="@+id/txtJudul"
            android:layout_marginTop="0dp"
            android:padding="10dp"
            android:text="Posted On February 7, 2020" />

        <TextView
            android:id="@+id/txtIsi"
            android:text="Sehubungan dengan Evaluasi masih terdapat mahasiswa yang belum melakukan pembayaran maupun KRS dan Validasi Oleh Dosen Wali maka terdapat penambahan jadwal KRS Online sesuai jadwal yang terlampir."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtPosted"
            android:layout_below="@+id/txtPosted"
            android:padding="10dp"
            android:textColor="#000000"/>

        <TextView
        android:id="@+id/download"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/txtIsi"
        android:text="@string/d_info3"
        android:textColor="#FFFFFF"
        android:background="#FF008000"
        />

        <TextView
            android:id="@+id/komentar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/download"
            android:layout_alignLeft="@+id/txtLink"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Comment" />

        <EditText
            android:id="@+id/teksKomentar"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/komentar"
            android:layout_alignLeft="@+id/komentar"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:background="#3222"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teksKomentar"
            android:layout_alignLeft="@+id/teksKomentar"
            android:padding="20dp"
            android:text="Name*" />

        <EditText
            android:id="@+id/teksNama"
            android:layout_width="170dp"
            android:layout_height="32dp"
            android:layout_below="@+id/nama"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-37dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:background="#3222"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teksNama"
            android:gravity="left"
            android:padding="20dp"
            android:text="Email*" />

        <EditText
            android:id="@+id/teksEmail"
            android:layout_width="170dp"
            android:layout_height="32dp"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-36dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:background="#3222"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teksEmail"
            android:padding="20dp"
            android:text="Website" />

        <EditText
            android:id="@+id/teksWeb"
            android:layout_width="170dp"
            android:layout_height="32dp"
            android:layout_below="@+id/website"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-35dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:background="#3222"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnPost"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/website"
            android:layout_alignLeft="@+id/website"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:background="#F44336"
            android:text="Post Comment"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnShow"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnPost"
            android:layout_alignLeft="@+id/btnPost"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:background="#F44336"
            android:text="Show Data"
            android:textColor="#FFFFFF" />

    </RelativeLayout>
</ScrollView>