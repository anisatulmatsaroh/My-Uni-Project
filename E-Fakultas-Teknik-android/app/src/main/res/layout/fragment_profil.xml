<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.e_ft.Profil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:background="@drawable/bg2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/judul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Profil Dosen dan Tenaga Kependidikan"
                    android:textColor="#FFFFFFFF"
                    android:background="#FF333333"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/judul"
                    android:id="@+id/profil1"
                    android:gravity="center"
                    android:text="Profil Dosen Jurusan Teknik Informatika"
                    android:padding="20dp"
                    android:background="@drawable/gb"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/b_tif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profil1"
                    android:text="Download FILE"
                    android:textColor="#000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/b_tif"
                    android:id="@+id/profil2"
                    android:padding="20dp"
                    android:background="@drawable/indus"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="Profil Dosen Jurusan Teknik Industri"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/b_tind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profil2"
                    android:text="Download FILE"
                    android:textColor="#000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/b_tind"
                    android:id="@+id/profil3"
                    android:padding="20dp"
                    android:background="@drawable/elektro"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="Profil Dosen Jurusan Teknik Elektro"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/b_elektro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profil3"
                    android:text="Download FILE"
                    android:textColor="#000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/b_elektro"
                    android:id="@+id/profil4"
                    android:padding="20dp"
                    android:background="@drawable/tendik2"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="Profil Tenaga Kependidikan Fakultas Teknik"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/b_tendik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profil4"
                    android:text="Download FILE"
                    android:textColor="#000000"
                    />



            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
